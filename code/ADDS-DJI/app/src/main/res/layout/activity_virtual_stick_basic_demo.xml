<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtView_label_virtualStickBasicDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual Stick Basic Demo"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_vsbd_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_vsbd_cancel"
        app:layout_constraintTop_toTopOf="@+id/btn_vsbd_cancel" />

    <Button
        android:id="@+id/btn_vsbd_takeOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Take Off"
        app:layout_constraintStart_toStartOf="@+id/txtView_label_vsbd_operationModeState"
        app:layout_constraintTop_toBottomOf="@+id/txtView_label_vsbd_operationModeState" />

    <Button
        android:id="@+id/btn_vsbd_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Land"
        app:layout_constraintEnd_toEndOf="@+id/btn_vsbd_takeOff"
        app:layout_constraintStart_toStartOf="@+id/btn_vsbd_takeOff"
        app:layout_constraintTop_toBottomOf="@+id/btn_vsbd_takeOff" />

    <TextView
        android:id="@+id/txtView_label_vsbd_operationMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Operation Mode:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_vsbd_operationMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="unknown"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_label_vsbd_operationMode"
        app:layout_constraintStart_toEndOf="@+id/txtView_label_vsbd_operationMode"
        app:layout_constraintTop_toTopOf="@+id/txtView_label_vsbd_operationMode" />

    <TextView
        android:id="@+id/txtView_label_vsbd_operationModeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="State:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtView_label_vsbd_operationMode"
        app:layout_constraintTop_toBottomOf="@+id/txtView_label_vsbd_operationMode" />

    <TextView
        android:id="@+id/txtView_vsbd_operationModeState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unknown"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_label_vsbd_operationModeState"
        app:layout_constraintStart_toStartOf="@+id/txtView_vsbd_operationMode"
        app:layout_constraintTop_toTopOf="@+id/txtView_label_vsbd_operationModeState" />

    <Button
        android:id="@+id/btn_vsbd_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:text="Cancel Mode"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_label_vsbd_operationModeState"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtView_label_vsbd_operationMode" />

    <Button
        android:id="@+id/btn_vsbd_startVirtualStick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Start Virtual Stick"
        app:layout_constraintEnd_toEndOf="@+id/btn_vsbd_cancel"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="@+id/btn_vsbd_cancel"
        app:layout_constraintTop_toBottomOf="@+id/btn_vsbd_cancel" />

    <Button
        android:id="@+id/btn_vsbd_virtualStickAddLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="ADD LEFT"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_vsbd_virtualStickRollValue"
        app:layout_constraintEnd_toStartOf="@+id/txtView_vsbd_virtualStickRollValue"
        app:layout_constraintTop_toTopOf="@+id/txtView_vsbd_virtualStickRollValue" />

    <Button
        android:id="@+id/btn_vsbd_virtualStickAddRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ADD RIGHT"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_vsbd_virtualStickRollValue"
        app:layout_constraintStart_toEndOf="@+id/txtView_vsbd_virtualStickRollValue"
        app:layout_constraintTop_toTopOf="@+id/txtView_vsbd_virtualStickRollValue" />

    <TextView
        android:id="@+id/txtView_vsbd_virtualStickRollValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="350dp"
        android:text="roll"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtView_vsbd_virtualStickPitchValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtView_vsbd_virtualStickPitchValue" />

    <Button
        android:id="@+id/btn_vsbd_virtualStickAddFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="ADD FRONT"
        app:layout_constraintBottom_toTopOf="@+id/txtView_vsbd_virtualStickPitchValue"
        app:layout_constraintEnd_toEndOf="@+id/txtView_vsbd_virtualStickPitchValue"
        app:layout_constraintStart_toStartOf="@+id/txtView_vsbd_virtualStickPitchValue" />

    <Button
        android:id="@+id/btn_vsbd_virtualStickAddBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="ADD BACK"
        app:layout_constraintEnd_toEndOf="@+id/txtView_vsbd_virtualStickPitchValue"
        app:layout_constraintStart_toStartOf="@+id/txtView_vsbd_virtualStickPitchValue"
        app:layout_constraintTop_toBottomOf="@+id/txtView_vsbd_virtualStickPitchValue" />

    <TextView
        android:id="@+id/txtView_vsbd_virtualStickPitchValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="80dp"
        android:text="pitch"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>