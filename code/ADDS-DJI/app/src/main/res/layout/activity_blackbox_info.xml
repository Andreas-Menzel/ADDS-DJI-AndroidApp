<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blackbox Info"
            android:textSize="34sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/txtView_label_blackboxInfo_packetsSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packets sent:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtView_blackboxInfo_packetsSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtView_label_blackboxInfo_lastPacket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Last packet:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtView_blackboxInfo_lastDatasetString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="/"/>

    </LinearLayout>

</ScrollView>